{
  "name": "html-cdn",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/html-cdn/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/html-cdn"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs html-cdn {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/html-cdn/**/*.ts"]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  },
  "tags": []
}
