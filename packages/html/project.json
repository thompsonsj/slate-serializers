{
  "name": "html",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/html/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/html",
        "main": "packages/html/src/index.ts",
        "tsConfig": "packages/html/tsconfig.lib.json",
        "assets": ["packages/html/*.md"],
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "cdn": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/html/cdn"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs html {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/html/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/html/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "distFolderPath": "dist/packages/html",
        "access": "public"
      },
      "dependsOn": ["build"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  }
}
